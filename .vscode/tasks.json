{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenGL Project",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "main.cpp",
                "Camera.cpp",
                "-o",
                "${workspaceFolder}/main",
                "-lglfw",
                "-lGLEW",
                "-lGL"
            ],

            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "main.cpp",
                "Camera.cpp",
                "-o",
                "${workspaceFolder}/main",
                "-lglfw",
                "-lGLEW",
                "-lGL"
            ],

            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}